<div class="routes-wrapper">
  <div class="route-contents">
    <div class="posts">
        <% if @favorite.checked == true %>
          <div class= "favorite-btn" style="background-color: #FF6600; color: white;" id= "favorite-btn" data_id=<%= @post.id %>>
            <%= image_tag "favorite-star.png" ,id:"favorite-star-icon" ,width:"20",height:"20" %>
            <span id="favorite">お気に入り登録済み</span>
          </div>
        <% else %>
          <div class= "favorite-btn" id= "favorite-btn" data_id=<%= @post.id %>>
            <%= image_tag "favorite-star.png" ,id:"favorite-star-icon" ,width:"20",height:"20" %>
            <span id="favorite">お気に入りに登録する</span>
          </div>
        <% end %>
      <div class="post">
        <%= link_to "編集", edit_post_path(@post) %>
        <%= link_to "削除", post_path(@post), method: :delete %>
        <div class="content">
          <p class="content-name" id="test">title:</p>
          <%= @post.title %>
        </div>
        <div class="content">
          <p class="content-name">area:</p>
          <%= @post.prefecture.name %>
          <%= @post.city %>
        </div>
        </div>
        <div class="content">
          <p class="content-name">with:</p>
          <%= @post.member.name %>
        </div>
        <div class="content">
          <p class="content-name">when:</p>
          <%= @post.timing.name %>
        </div>
        <div class="post-nickname">
          <%=link_to "by  #{@post.user.nickname}", "#", class:"post-nickname" %>
        </div>
      </div>


      <% @plans.each do |plan| %>
        <div class="details">
          <%= link_to "編集", "/posts/#{@post.id}/plans/#{plan.id}/edit" %>
          <%= link_to "削除", "/posts/#{@post.id}/plans/#{plan.id}", method: :delete %>
          <div class="content">
            <p class="content-name">スポット</p>
            <%= plan.place %>
          </div>
          <div class="content">
            <p class="content-name">おすすめポイント</p>
            <%= plan.text %>
          </div>
          <% if plan.image.attached? %>
            <div class="content">
              <p class="content-name">画像</p>
              <%= image_tag plan.image, :size => '600x400' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
